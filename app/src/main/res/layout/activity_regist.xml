<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rela_titlemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp">
                <!-- 头部-->
                <ImageView
                    android:id="@+id/img_exit"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_back_8a8a8a" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/regist"
                    android:textColor="@color/A1A1A1"
                    android:textSize="22sp" />
            </RelativeLayout>

            <!--注册主体-->
            <LinearLayout
                android:id="@+id/lin_registmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="56dp"
                    android:background="@null"
                    android:hint="@string/regist_name"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--商家密码-->
                <EditText
                    android:id="@+id/edit_shoppass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/login_pass"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_shoppass"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--商家确认密码-->
                <EditText
                    android:id="@+id/edit_shoptconfirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/regist_confirmpass"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_shopconfirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--姓名-->
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edit_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/regist_nickname"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_nickname"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--身份证号-->
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edit_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/regist_idcard"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_idcard"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--车牌号-->
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edit_carcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/regist_carcard"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_carcard"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--身份选择-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/regist_tvtype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="加油站"
                        android:textColor="@color/A1A1A1" />

                    <ImageSwitcher
                        android:id="@+id/regist_imgselecttype"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/arrow_down_b" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/D3D3D3" />

                <!--司机密码-->
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edit_diverpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/login_pass"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_diverpass"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--司机确认密码-->
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edit_diverconfirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="@string/login_pass"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_diverconfirmpass"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <!--验证码-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lin_divercode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_divercode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:hint="@string/forget_code"
                            android:inputType="number"
                            android:textColorHint="@color/BFC0BF"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/D3D3D3" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/but_divercode"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gorget_butcode"
                        android:text="获取验证码"
                        android:textSize="@dimen/common_textsize_12" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:id="@+id/regist_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    >

                    <CheckBox
                        android:id="@+id/check_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                    <TextView
                        android:id="@+id/text_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text"
                        android:textSize="15sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/regist_but"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/CFE7FB"
                    android:gravity="center"
                    android:text="@string/regist_button"
                    android:textColor="@color/A1A1A1" />
            </LinearLayout>

            <!--注册次体-->
            <LinearLayout
                android:id="@+id/lin_registsecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="@string/regist_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgtwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/registlinsecond"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgthree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgfour"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_shopphone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@null"
                    android:hint="@string/forget_name"
                    android:textColorHint="@color/BFC0BF"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/D3D3D3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_shopcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:hint="@string/forget_code"
                            android:inputType="number"
                            android:textColorHint="@color/BFC0BF"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/D3D3D3" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/but_shopcode"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gorget_butcode"
                        android:text="获取验证码"
                        android:textSize="@dimen/common_textsize_12" />

                </LinearLayout>

                <Button
                    android:id="@+id/regist_sure"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/CFE7FB"
                    android:gravity="center"
                    android:text="@string/forget_surebutton"
                    android:textColor="@color/A1A1A1" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>